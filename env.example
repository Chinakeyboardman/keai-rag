# ====================================
# 向量数据库配置
# ====================================
# 是否使用 Qdrant（true/false）
USE_QDRANT=true
# Qdrant 服务地址
QDRANT_URL=http://localhost:6333
# Qdrant API Key（如果需要）
QDRANT_API_KEY=
# Qdrant 集合名称
QDRANT_COLLECTION_NAME=rag_documents
# 向量维度
VECTOR_DIMENSION=1024

# ====================================
# Embedding 模型配置
# ====================================
# 模型类型：local（本地）或 api（API调用）
EMBEDDING_MODEL_TYPE=local
# 模型名称
EMBEDDING_MODEL_NAME=moka-ai/m3e-large
# 本地模型路径（如果使用本地模型）
EMBEDDING_MODEL_PATH=./models/m3e-large
# API 配置（如果使用 API）
EMBEDDING_API_KEY=
EMBEDDING_API_BASE=https://api.openai.com/v1
# 批处理大小
EMBEDDING_BATCH_SIZE=32

# ====================================
# LLM 模型配置
# ====================================
# 模型类型：local（本地）或 api（API调用）
LLM_MODEL_TYPE=local
# 模型名称
LLM_MODEL_NAME=deepseek-ai/DeepSeek-R1-Distill-Qwen-7B
# 本地模型路径（如果使用本地模型）
LLM_MODEL_PATH=/Users/chenjiawei/Public/models/deepseek-ai/DeepSeek-R1-Distill-Qwen-7B
# API 配置（如果使用 API）
LLM_API_KEY=
LLM_API_BASE=https://api.deepseek.com/v1
# 生成参数
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=0.95

# ====================================
# 文档处理配置
# ====================================
# 文本分块大小
CHUNK_SIZE=1000
# 文本分块重叠
CHUNK_OVERLAP=200
# 检索返回的文档块数量
RETRIEVAL_TOP_K=3

# ====================================
# 数据存储路径
# ====================================
# 数据根目录
DATA_DIR=./data
# 向量存储目录（FAISS 降级使用）
VECTOR_STORE_DIR=./data/vectors
# 元数据存储目录
METADATA_DIR=./data/metadata
# 文档存储目录
DOCUMENTS_DIR=./data/documents

# ====================================
# API 服务配置
# ====================================
# 服务主机
API_HOST=0.0.0.0
# 服务端口
API_PORT=8000
# API 前缀
API_PREFIX=/api/v1
# 允许的跨域来源（逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ====================================
# 日志配置
# ====================================
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE=./logs/app.log
# 日志文件最大大小（MB）
LOG_MAX_SIZE=10
# 日志文件保留数量
LOG_BACKUP_COUNT=5

# ====================================
# 其他配置
# ====================================
# 是否启用调试模式
DEBUG=false
# 项目名称
PROJECT_NAME=企业级RAG系统
# 项目版本
PROJECT_VERSION=1.0.0
